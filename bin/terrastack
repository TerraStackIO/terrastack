#!/usr/bin/env node

var program = require("commander");

program.command("plan").action(function(options) {
  const stack = require(process.cwd() + "/stack.js");

  (async () => {
    await stack.plan();
  })();
});

program.command("apply").action(function(options) {
  const stack = require(process.cwd() + "/stack.js");

  (async () => {
    await stack.apply();
  })();
});

program.command("destroy").action(function(options) {
  const stack = require(process.cwd() + "/stack.js");

  (async () => {
    await stack.destroy();
  })();
});

program.command("list").action(function(options) {
  const stack = require(process.cwd() + "/stack.js");

  (async () => {
    const components = stack
      .list()
      .map(component => `* ${component.name}`)
      .join("\n");

    console.log(
      `
Stack: ${stack.name}

${components}
`.trim()
    );
  })();
});

program.parse(process.argv);
