 */

var program = require("commander");

program.command("plan").action(function(options) {
  const stack = require(process.cwd() + "/stack.js");

  (async () => {
    await stack.plan();
  })();
});

program.command("apply").action(function(options) {
  const stack = require(process.cwd() + "/stack.js");

  (async () => {
    await stack.apply();
  })();
});

program.command("destroy").action(function(options) {
  const stack = require(process.cwd() + "/stack.js");

  (async () => {
    await stack.destroy();
  })();
});

program.command("component", "Manage components");
program.command("list", "Get info about the stack");

program.parse(process.argv);
